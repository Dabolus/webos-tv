{
  "name": "webos-tv",
  "version": "0.0.1",
  "description": "A promise-based package to control WebOS based TVs with JavaScript.",
  "main": "lib/webos-tv.js",
  "module": "lib/webos-tv.js",
  "browser": "lib/webos-tv.iife.js",
  "types": "lib/webos-tv.d.ts",
  "type": "module",
  "scripts": {
    "start": "rollup -w -c rollup.config.js",
    "build": "rollup -c rollup.config.js",
    "lint": "eslint '**/*.ts'",
    "format": "prettier --write '**/*.ts'",
    "test": "jest",
    "posttest": "codecov",
    "generate-docs": "typedoc src/*.ts --out api --name 'webOS' --theme markdown",
    "prepublishOnly": "yarn build"
  },
  "dependencies": {
    "ws": "^8.11.0"
  },
  "optionalDependencies": {
    "bufferutil": "^4.0.7",
    "utf-8-validate": "^5.0.10"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^23.0.2",
    "@rollup/plugin-node-resolve": "^15.0.1",
    "@rollup/plugin-typescript": "^9.0.2",
    "@types/jest": "^29.2.3",
    "@types/node": "^18.11.9",
    "@types/ws": "^8.5.3",
    "@typescript-eslint/eslint-plugin": "^5.44.0",
    "@typescript-eslint/parser": "^5.44.0",
    "codecov": "^3.8.3",
    "eslint": "^8.28.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "jest": "^29.3.1",
    "prettier": "^2.8.0",
    "rollup": "^3.4.0",
    "rollup-plugin-commonjs": "^10.1.0",
    "rollup-plugin-node-globals": "^1.4.0",
    "rollup-plugin-typescript2": "^0.34.1",
    "ts-jest": "^29.0.3",
    "tslib": "^2.4.1",
    "typedoc": "^0.23.21",
    "typedoc-plugin-markdown": "^3.13.6",
    "typescript": "^4.9.3"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Dabolus/webos-tv.git"
  },
  "author": "Giorgio Garasto <giorgio@garasto.it>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Dabolus/webos-tv/issues"
  },
  "homepage": "https://github.com/Dabolus/webos-tv#readme",
  "packageManager": "yarn@3.3.0"
}
