{
  "name": "webos-tv",
  "version": "0.0.1",
  "description": "A promise-based package to control WebOS based TVs with JavaScript.",
  "main": "lib/webos-tv.js",
  "module": "lib/webos-tv.js",
  "browser": "lib/webos-tv.iife.js",
  "types": "lib/webos-tv.d.ts",
  "type": "module",
  "scripts": {
    "start": "rollup -w -c rollup.config.js",
    "build": "rollup -c rollup.config.js",
    "lint": "eslint '**/*.ts'",
    "format": "prettier --write '**/*.ts'",
    "test": "jest",
    "posttest": "codecov",
    "generate-docs": "typedoc src/*.ts --out api --name 'webOS' --theme markdown",
    "prepublishOnly": "yarn build"
  },
  "dependencies": {
    "ws": "^8.6.0"
  },
  "optionalDependencies": {
    "bufferutil": "^4.0.6",
    "utf-8-validate": "^5.0.9"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^22.0.0",
    "@rollup/plugin-node-resolve": "^13.3.0",
    "@rollup/plugin-typescript": "^8.3.2",
    "@types/jest": "^27.5.0",
    "@types/node": "^17.0.31",
    "@types/ws": "^8.5.3",
    "@typescript-eslint/eslint-plugin": "^5.23.0",
    "@typescript-eslint/parser": "^5.23.0",
    "codecov": "^3.8.3",
    "eslint": "^8.15.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.0.0",
    "jest": "^28.1.0",
    "prettier": "^2.6.2",
    "rollup": "^2.72.1",
    "rollup-plugin-commonjs": "^10.1.0",
    "rollup-plugin-node-globals": "^1.4.0",
    "rollup-plugin-typescript2": "^0.31.2",
    "ts-jest": "^28.0.2",
    "tslib": "^2.4.0",
    "typedoc": "^0.22.15",
    "typedoc-plugin-markdown": "^3.12.1",
    "typescript": "^4.6.4"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Dabolus/webos-tv.git"
