{
  "name": "webos-tv",
  "version": "0.0.1",
  "description": "A promise-based package to control WebOS based TVs with JavaScript.",
  "main": "lib/webos-tv.js",
  "browser": "lib/webos-tv.iife.js",
  "module": "lib/webos-tv.mjs",
  "types": "lib/webos-tv.d.ts",
  "scripts": {
    "start": "rollup -w -c rollup.config.js",
    "build": "rollup -c rollup.config.js",
    "lint": "tslint -p .",
    "format": "tslint -p . --fix",
    "test": "jest",
    "posttest": "codecov",
    "generate-docs": "typedoc src --out api --mode file --name 'webOS' --theme markdown --mdHideSources",
    "prepublishOnly": "yarn build"
  },
  "dependencies": {
    "ws": "^6.1.3"
  },
  "optionalDependencies": {
    "bufferutil": "^4.0.0",
    "utf-8-validate": "^5.0.1"
  },
  "devDependencies": {
    "@types/jest": "^23.3.13",
    "@types/node": "^10.12.18",
    "@types/ws": "^6.0.1",
    "codecov": "^3.1.0",
    "jest": "^24.0.0",
    "prettier": "^2.6.2",
    "rollup": "^1.1.2",
    "rollup-plugin-commonjs": "^9.2.0",
    "rollup-plugin-node-globals": "^1.4.0",
    "rollup-plugin-typescript2": "^0.19.2",
    "ts-jest": "^23.10.5",
    "tslint": "^5.12.1",
    "typedoc": "^0.14.2",
    "typedoc-plugin-markdown": "^1.1.24",
    "typescript": "^3.2.4"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Dabolus/webos-tv.git"
  },
  "author": "Giorgio Garasto <giorgio@garasto.it>",
