{
  "compilerOptions": {
    "module": "esnext",
    "moduleResolution": "node",
    "lib": ["esnext", "dom"],
    "target": "es2018",
    "declaration": true,
    "strict": true,
    "strictNullChecks": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "rootDir": "src",
    "outDir": "lib",
    "declarationDir": "."
  },
  "include": ["src"],
  "exclude": ["lib", "node_modules"]
}
